<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView

        android:id="@+id/materialCardView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:cardCornerRadius="18sp"
        android:layout_marginVertical="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2B2059"
        app:strokeWidth="4dp">

        <ImageView
            android:id="@+id/img"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/title"
        style="@style/ButtonTextView"
        android:layout_width="0dp"
        android:layout_marginEnd="6dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6sp"
        android:text="Diamands"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/img_bg"
        app:layout_constraintStart_toEndOf="@+id/materialCardView"
        app:layout_constraintTop_toTopOf="@+id/materialCardView" />

    <TextView
        android:id="@+id/desc"
        style="@style/ButtonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6sp"
        android:text="Free Fire (5.600)"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/materialCardView"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_coin_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <TextView
        android:id="@+id/price"
        style="@style/ButtonTextView"
        android:layout_width="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="20sp"
        android:gravity="center"
        android:layout_height="0dp"
        android:text="29.00"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/img_bg"
        app:layout_constraintEnd_toEndOf="@+id/img_bg"
        app:layout_constraintStart_toStartOf="@+id/img_bg"
        app:layout_constraintTop_toTopOf="@+id/img_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>