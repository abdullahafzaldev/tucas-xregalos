<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#5C54B3"
    app:strokeColor="#FFFFFF"
    app:strokeWidth="3dp"
    android:layout_marginHorizontal="44dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="22dp"
        android:layout_height="match_parent">
        <TextView
            android:text="Canjea el código
de un amigo"
            android:textColor="@color/white"
            style="@style/ButtonTextView"
            android:textSize="23dp"
            android:gravity="center"
            android:layout_marginTop="12sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Solo puedes canjear un código, úsalo
con cabeza para recibir los puntos."
            android:textColor="@color/white"
            android:gravity="center"
           android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:strokeWidth="3dp"
            app:strokeColor="#7B67D9"
            app:cardBackgroundColor="#1C193F"
            app:cardCornerRadius="80dp"
            android:layout_margin="12dp"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/key_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#1C193F"
                   android:layout_marginHorizontal="6dp"
                    android:textColorHint="#6756BA"
                    android:hint="Escribe el código..."
                    android:gravity="center"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"/>






            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/redeemBtn"
            android:layout_width="wrap_content"
            app:cornerRadius="8dp"
            style="@style/ButtonTextView"
            app:backgroundTint="#342C91"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="Canjear"
            android:textAllCaps="false"
            android:fontFamily="@font/poppinsblack"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="No, gracias..."
            android:padding="12sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>



    </LinearLayout>






</com.google.android.material.card.MaterialCardView>