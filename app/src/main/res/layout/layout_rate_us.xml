<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialouge_background3"
    android:layout_marginHorizontal="@dimen/_25sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="22dp"
        android:orientation="vertical">

        <TextView
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center"
            android:text="¡Califícanos!"
android:fontFamily="@font/baloo"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
           android:fontFamily="@font/dm_sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="Tu opinión nos importa."
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:fontFamily="@font/baloo"
            android:text="@string/rate_us_string"
            android:textColor="@color/white" />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:src="@drawable/ratingstarsldpi"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialouge_button_shadow"
    android:backgroundTint="#0D000000"
    android:layout_marginTop="12dp"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/rateUs"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Calificar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:background="@drawable/button_background"

            />
</LinearLayout>
        <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12sp"
            android:text="No, gracias..."
            android:textColor="@color/white"
            android:textSize="12sp" />


    </LinearLayout>






</LinearLayout>