<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialouge_background1"
    android:layout_marginHorizontal="42sp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="22dp"
        android:layout_height="match_parent">
        <TextView
            android:text="¡No tienes puntos!"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="12sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/dm_sans"
            android:gravity="center"

            android:text="No tienes suficientes puntos para realizar dicha acción."
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialouge_button_shadow"
    android:backgroundTint="#0D000000"
    android:layout_marginVertical="16dp"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/endBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Volver"
            android:paddingVertical="10dp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:background="@drawable/button_background"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
</LinearLayout>




    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>