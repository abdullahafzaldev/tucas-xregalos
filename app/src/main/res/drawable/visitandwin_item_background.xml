<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C4B5ED"/>
            <corners
                android:radius="15dp"/>
        </shape>
    </item>
    <item>
        <inset android:insetBottom="5dp">
            <shape android:shape="rectangle">
                <gradient android:startColor="#7A49FE"
                    android:angle="315"
                    android:endColor="#926CF8"/>
                <corners
                    android:radius="15dp"/>
            </shape>
        </inset>
    </item>

</layer-list>