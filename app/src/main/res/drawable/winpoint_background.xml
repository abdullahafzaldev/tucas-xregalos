<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EFB2BB"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>
    <item>
        <inset android:insetBottom="5dp">
            <shape android:shape="rectangle">
                <gradient android:startColor="#F24C5D"
                    android:angle="315"
                    android:endColor="#F86B85"/>
                <corners
                    android:radius="20dp"/>
            </shape>
        </inset>
    </item>

</layer-list>